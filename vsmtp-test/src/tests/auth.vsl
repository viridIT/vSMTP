#{
    connect: [
        rule "ok" || vsl::accept()
    ],
    authenticate: [
        rule "auth hardcoded" || {
            let db = #{
                "hello": "world",
                "héllo": "wÖrld"
            };

            if ctx.is_authenticated {
                return vsl::deny();
            }

            switch ctx.auth.type {
                "Verify" => {
                    if db[ctx.auth.authid] == ctx.auth.authpass {
                        vsl::accept()
                    } else {
                        vsl::deny()
                    }
                },
                "Query" => {
                    vsl::send(db[ctx.auth.authid])
                }
            }
        }
    ]
}
