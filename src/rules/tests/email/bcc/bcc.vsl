fn invalid_object(server, obj) {
    try {
        vsl::bcc(server, obj);
        return vsl::deny();
    } catch (err) {
        if `'${obj}' could not be converted to a valid rcpt address` in err { return vsl::next(); } else { return vsl::deny(); }
    }
}

fn add_bcc(server, bcc) {
    if bcc in server.rcpt {
        return vsl::deny();
    }

    vsl::bcc(server, bcc);

    if bcc in server.rcpt { vsl::next() } else { vsl::deny() }
}