fn add_header_failure(server, header, value, error_desired) {
    try {
        vsl::add_header(server, header, value);
        return vsl::deny();
    } catch (err) {
        if error_desired in err && !vsl::has_header(server, header) { return vsl::next(); } else { return vsl::deny(); }
    }
}

fn add_header_success(server, header, value) {
    try {
        vsl::add_header(server, header, value);
        if vsl::has_header(server, header) { return vsl::next(); } else { return vsl::deny(); }
    } catch (err) {
        return vsl::deny();
    }
}