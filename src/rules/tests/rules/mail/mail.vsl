obj val "john" "johndoe";
obj fqdn "viridit" "viridit.com";
obj addr "customer" "customer@company.com";

rule mail "test_mail_user" #{
  condition: || vsl.IS_MAIL("john"),
  on_success: vsl.ACCEPT,
  on_failure: vsl.CONTINUE,
};

rule mail "test_mail_fqdn" #{
  condition: || vsl.IS_MAIL("viridit"),
  on_success: vsl.ACCEPT,
  on_failure: vsl.CONTINUE,
};

rule mail "test_mail_address" #{
  condition: || vsl.IS_MAIL("customer"),
  on_success: vsl.ACCEPT,
  on_failure: vsl.DENY,
};