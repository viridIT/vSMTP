obj addr "john" "johndoe@personal.com";

rule preq "test_add_rcpt" #{
  condition: || true,

  on_success: || {
    for r in rcpts {
      rcpt = r;
      if vsl.IS_RCPT("john") {
        // // I want to track every mail sent to john.
        vsl.ADD_RCPT("me@personal.com");
      }
    }
    vsl.CONTINUE()
  },};