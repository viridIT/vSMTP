fn invalid_object(ctx, obj) {
    try {
        vsl::bcc(ctx, obj);
        return vsl::deny();
    } catch (err) {
        if `'${obj}' could not be converted to a valid rcpt address` in err { return vsl::next(); } else { return vsl::deny(); }
    }
}

fn add_bcc(ctx, bcc) {
    if bcc in ctx.rcpt {
        return vsl::deny();
    }

    vsl::bcc(ctx, bcc);

    if bcc in ctx.rcpt { vsl::next() } else { vsl::deny() }
}
