#{
    connect: [
        rule "fail mail_from rewrite: bad address format" || {
            try {
                rewrite_mail_from_context("invalid");
                return deny();
            } catch (err) {
                if "invalid type conversion" in err { return next(); } else { return deny(); }
            }
        },

        rule "fail rcpt rewrite: 1st bad address format" || {
            try {
                rewrite_rcpt_context("invalid", "valid@email.com");
                return deny();
            } catch (err) {
                if "invalid type conversion" in err { return next(); } else { return deny(); }
            }
        },

        rule "fail rcpt rewrite: 2nd bad address format" || {
            try {
                rewrite_rcpt_context("valid@email.com", "invalid");
                return deny();
            } catch (err) {
                if "invalid type conversion" in err { return next(); } else { return deny(); }
            }
        },

        rule "unavailable mail timestamp" || {
            try {
                print(ctx().mail_timestamp);
                return deny();
            } catch (err) {
                if "the field: `mail_timestamp` is not defined" in err { return next(); } else { return deny(); }
            }
        },

        rule "unavailable message id" || {
            try {
                print(ctx().message_id);
                return deny();
            } catch (err) {
                if "the field: `message_id` is not defined" in err { return next(); } else { return deny(); }
            }
        },

        rule "trailing connect" || accept(),
    ],

    preq: [
        rule "raw=>parsed and mail_from raw" || {
            try {
                rewrite_mail_from_message("impossible@torewrite.com");
                return next();
            } catch (err) {
                print(err);
                return deny();
            }
        },

        rule "raw=>parsed and add rcpt" || {
            try {
                add_to_message("impossible@toadd.com");
                return next();
            } catch (err) {
                print(err);
                return deny();
            }
        },

        rule "raw=>parsed and remove rcpt" || {
            try {
                remove_to_message("impossible@toremove.com");
                return next();
            } catch (err) {
                print(err);
                return deny();
            }
        },

        rule "raw=>parsed and rewrite rcpt" || {
            try {
                rewrite_to_message("impossible@torewrite.com", "impossible@torewrite.com");
                return next();
            } catch (err) {
                print(err);
                return deny();
            }
        },

        rule "trailing preq" || accept(),
    ],

    postq: [
        action "printing client data" || {
            log("debug", "email received.");
            log("debug", `connexion timestamp: ${ctx().connection_timestamp}`);
            log("debug", `ip: ${ctx().client_ip}`);
            log("debug", `helo: ${ctx().helo}`);
            log("debug", `mail_from: ${ctx().mail_from}`);
            log("debug", `metadata {\n  mail timestamp: ${ctx().mail_timestamp}\n  message id: ${ctx().message_id}\n}`);

            log("trace", ctx().to_string());
            log("trace", ctx().to_debug());

            print(ctx().mail_timestamp.to_string());
            print(ctx().mail_timestamp.to_debug());
        },

        action "rewrite envelop" || {
            // available parameters types for `add_rcpt`.
            // object added2 address = "added2@example.com";
            // object added3 string = "added3@example.com";
            // object failadd ip = "127.0.0.1";
            add_rcpt_context("added@example.com");
            // add_rcpt(added2);
            // add_rcpt(added3);
            // try { add_rcpt(failadd); return deny(); } catch { }

            // available parameters types for `remove_rcpt`.
            // object remove2 address = "toremove1@example.com";
            // object remove3 string = "toremove2@example.com";
            // object failremove fqdn = "example.com";
            remove_rcpt_context("rcpt@toremove.org");
            // remove_rcpt("rcpt@toremove.org");
            // remove_rcpt("rcpt@toremove.org");

            rewrite_rcpt_context("rcpt@torewrite.net", "new@rcpt.net");
            rewrite_mail_from_context("new@mailfrom.eu");
        },

        action "rewrite message headers" || {
            // available parameters types for `add_to_message`.
            object added1 address = "added1@example.com";
            object added2 string = "added2@example.com";
            add_to_message(added1);
            add_to_message(added2);
            add_to_message("added3@example.com");

            object fail ip4 = "127.0.0.1";
            try { add_to_message(fail); return deny(); } catch (e) { print(e) }

            // available parameters types for `remove_to_message`.
            object removed1 address = "removed1@example.com";
            object removed2 string = "removed2@example.com";
            remove_to_message(removed1);
            remove_to_message(removed2);
            remove_to_message("removed3@example.org");

            object fail ip4 = "127.0.0.1";
            try { remove_to_message(fail); return deny(); } catch (e) { print(e) }

            // available parameters types for `rewrite_to_message`.
            object rewrite1 address = "rewrite1@example.com";
            object rewrite2 string = "rewrite2@example.com";
            rewrite_to_message(rewrite1, "rewrite3@example.org");
            rewrite_to_message("rewrite3@example.org", rewrite2);
            rewrite_to_message("rewrite3@example.org", "rewrite4@example.org");
            rewrite_to_message(rewrite1, rewrite2);

            object fail ip4 = "127.0.0.1";
            try { rewrite_to_message(fail, "rewrite3@example.com"); return deny(); } catch (e) { print(e) }

            remove_to_message(added1);
            remove_to_message("other.rcpt@toremove.org");
            rewrite_to_message("other.rcpt@torewrite.net", rewrite1);
            rewrite_to_message(added2, rewrite2);
        },

        rule "check rewrites" || {
            if "added@example.com" in ctx().rcpt_list
            // && !("rcpt@toremove.org" in ctx().rcpt_list)
            // && "new@rcpt.net" in ctx().rcpt_list
            // && !("rcpt@torewrite.net" in ctx().rcpt_list)
            && ctx().mail_from is "new@mailfrom.eu" {
                next()
            } else {
                print(ctx().mail_from );
                deny()
            }
        },

        rule "trailing postq" || accept(),
    ]
}
