fn has_virus(server) {
    let result = services.run_service("clamscan");
    debug(`${result}`);

    if result.has_signal {
        // timed out
        return false;
    }

    result.has_code && result.code != 0
}

#{
    preq: [
        action "antivirus" || {
            if has_virus(server) {
                // quarantine and log and blacklist
            }
        }
    ]
}
