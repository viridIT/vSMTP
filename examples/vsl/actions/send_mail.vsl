#{
    connect: [
        rule "file_not_found" || {
            try {
                sys::send_mail("from", ["to"], "invalid.path", "relay");
                return sys::deny();
            } catch (err) {
                // test should continue here.
                if "No such file or directory" in err {
                    return sys::next();
                } else {
                    return sys::deny();
                }
            }
        },

        rule "invalid from" || {
            try {
                sys::send_mail("", ["john@doe.net"], `${toml::app.dirpath}/template.eml`, "relay");
                return sys::deny();
            } catch (err) {
                print(err);
                if "MissingParts" in err {
                    return sys::next();
                } else {
                    return sys::deny();
                }
            }
        },

        rule "invalid to" || {
            try {
                sys::send_mail("john@doe.net", [], `${toml::app.dirpath}/template.eml`, "relay");
                return sys::deny();
            } catch (err) {
                if "MissingTo" in err {
                    return sys::next();
                } else {
                    return sys::deny();
                }
            }
        },

        rule "invalid relay" || {
            try {
                sys::send_mail("john@doe.net", ["green@foo.net"], `${toml::app.dirpath}/template.eml`, "relay");
                return sys::deny();
            } catch (err) {
                if "Temporary failure in name resolution" in err {
                    return sys::next();
                } else {
                    return sys::deny();
                }
            }
        },

        rule "trailing" || sys::accept(),
    ],
}
