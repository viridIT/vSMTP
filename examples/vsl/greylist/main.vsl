import "db" as db;

fn contains(key) {
    this.db_query(key.to_string()).len() != 0
}

fn set(mail) {
    this.db_add([mail.to_string()])
}

#{
    mail: [
        rule "greylist" || {
            if db::greylist.contains(ctx().mail_from) {
                accept()
            } else {
                db::greylist.set(ctx().mail_from);
                deny()
            }
        }
    ],
}
