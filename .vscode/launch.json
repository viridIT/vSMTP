  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch & configure vSMTP",
      "cargo": {
        "args": [
          "build",
          "--bin=vsmtp",
          "--package=vsmtp",
        ],
        "filter": {
          "name": "vsmtp",
          "kind": "bin"
        }
      },
      "args": [
        "-c",
        "${workspaceFolder}/config/vsmtp.dev-local.toml"
      ],
      "program": "${workspaceFolder}/target/debug/vsmtp",
      "cwd": "${workspaceFolder}/target/debug",
      "sourceLanguages": [
        "rust"
      ],
      "env": {
        "VSMTP_CONFIG_PATH": "${workspaceFolder}/config/vsmtp.dev-local.toml"
      },
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "Debug vSMTP",
      "program": "${workspaceFolder}/target/debug/vsmtp",
    },
  ]
}