#{
    connect: [
        rule "fail mail_from rewrite: email not received" || {
            try {
                sys::rewrite_mail_from(ctx, "impossible@torewrite.com");
                return sys::deny();
            } catch (err) {
                if "the email has not been received yet" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "fail mail_from rewrite: bad address format" || {
            try {
                sys::rewrite_mail_from(ctx, "invalid");
                return sys::deny();
            } catch (err) {
                if "could not rewrite mail_from with 'invalid' because it is not valid address" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "fail rcpt rewrite: 1st bad address format" || {
            try {
                sys::rewrite_rcpt(ctx, "invalid", "valid@email.com");
                return sys::deny();
            } catch (err) {
                if "could not rewrite address 'invalid' because it is not valid address" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "fail rcpt rewrite: 2nd bad address format" || {
            try {
                sys::rewrite_rcpt(ctx, "valid@email.com", "invalid");
                return sys::deny();
            } catch (err) {
                if "could not rewrite address 'valid@email.com' with 'invalid' because it is not valid address" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "unavailable mail timestamp" || {
            try {
                print(ctx.mail_timestamp);
                return sys::deny();
            } catch (err) {
                if "metadata are not available in this stage" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "unavailable message id" || {
            try {
                print(ctx.message_id);
                return sys::deny();
            } catch (err) {
                if "metadata are not available in this stage" in err { return sys::next(); } else { return sys::deny(); }
            }
        },

        rule "trailing" || sys::accept(),
    ],

    preq: [
        rule "failed mail_from rewrite: email not parsed" || {
            try {
                sys::rewrite_mail_from(ctx, "impossible@torewrite.com");
                return sys::deny();
            } catch (err) {
                if "the email has not been parsed yet" in err { return sys::next(); } else { return sys::deny() }
            }
        },

        rule "failed add rcpt: email not yet parsed" || {
            try {
                sys::add_rcpt(ctx, "impossible@toadd.com");
                return sys::deny();
            } catch (err) {
                if "the email has not been parsed yet" in err { return sys::next(); } else { return sys::deny() }
            }
        },

        rule "failed remove rcpt: email not yet parsed" || {
            try {
                sys::remove_rcpt(ctx, "impossible@toremove.com");
                return sys::deny();
            } catch (err) {
                if "failed to remove rcpt: the email has not been received or parsed yet." in err { return sys::next(); } else { return sys::deny() }
            }
        },

        rule "failed rewrite rcpt: email not yet parsed" || {
            try {
                sys::rewrite_rcpt(ctx, "impossible@torewrite.com", "impossible@torewrite.com");
                return sys::deny();
            } catch (err) {
                if "failed to rewrite rcpt: the email has not been received or parsed yet." in err { return sys::next(); } else { return sys::deny() }
            }
        },

        rule "trailing" || sys::accept(),
    ],

    postq: [
        action "printing client data" || {
            sys::log("debug", "email received.");
            sys::log("debug", `connexion timestamp: ${ctx.connection_timestamp}`);
            sys::log("debug", `ip: ${ctx.client_ip}`);
            sys::log("debug", `helo: ${ctx.helo}`);
            sys::log("debug", `mail_from: ${ctx.mail_from}`);
            sys::log("debug", `metadata {\n  mail timestamp: ${ctx.mail_timestamp}\n  message id: ${ctx.message_id}\n}`);

            sys::log("trace", ctx.to_string());
            sys::log("trace", ctx.to_debug());

            print(ctx.mail_timestamp.to_string());
            print(ctx.mail_timestamp.to_debug());
        },

        action "rewrite" || {
            sys::add_rcpt(ctx, "added@rcpt.com");
            sys::remove_rcpt(ctx, "rcpt@toremove.org");
            sys::rewrite_rcpt(ctx, "rcpt@torewrite.net", "new@rcpt.net");
            sys::rewrite_mail_from(ctx, "new@mailfrom.eu");
        },

        rule "check_rewrites" || {
            if "added@rcpt.com" in ctx.rcpt
            && !("rcpt@toremove.org" in ctx.rcpt)
            && "new@rcpt.net" in ctx.rcpt
            && !("rcpt@torewrite.net" in ctx.rcpt)
            && ctx.mail_from is "new@mailfrom.eu" {
                sys::next()
            } else {
                sys::deny()
            }
        },

        rule "trailing" || sys::accept(),
    ]
}
