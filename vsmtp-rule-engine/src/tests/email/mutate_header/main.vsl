fn mutate_headers(ctx) {
    sys::add_header(ctx, "X-New-Header", "value of header");
    sys::add_header(ctx, "X-Another-Header", "value of another");
    sys::add_header(ctx, "From", "<john@doe.com>");
    sys::add_header(ctx, "To", "<green@foo.net>");

    if !sys::has_header(ctx, "X-New-Header")
    || !sys::has_header(ctx, "X-Another-Header")
    || !sys::has_header(ctx, "From")
    || !sys::has_header(ctx, "To")
    {
        return sys::deny();
    }

    sys::set_header(ctx, "X-New-Header", "new value!");
    sys::set_header(ctx, "X-Yet-Another-Header", "adding to header section when not found");

    print(sys::get_header(ctx, "X-New-Header"));

    if !sys::has_header(ctx, "X-New-Header")
    || !sys::has_header(ctx, "X-Yet-Another-Header")
    {
        return sys::deny();
    }

    if sys::get_header(ctx, "X-New-Header") == "new value!"
    && sys::get_header(ctx, "X-Another-Header") == "value of another"
    && sys::get_header(ctx, "From") == "<john@doe.com>"
    && sys::get_header(ctx, "To") == "<green@foo.net>"
    && sys::get_header(ctx, "X-Yet-Another-Header") == "adding to header section when not found"
    {
        sys::next()
    } else {
        sys::deny()
    }
}

#{
    connect: [
        rule "adding headers when body is empty" || mutate_headers(ctx),
        rule "trailing" || sys::accept(),
    ],

    preq: [
        rule "adding headers to raw email" || mutate_headers(ctx),
        rule "trailing" || sys::accept(),
    ],

    postq: [
        rule "adding headers to parsed email" || mutate_headers(ctx),
        rule "trailing" || sys::accept(),
    ],
}
