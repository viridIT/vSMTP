fn invalid_object(ctx, obj) {
    try {
        sys::bcc(ctx, obj);
        return sys::deny();
    } catch (err) {
        if `'${obj}' could not be converted to a valid rcpt address` in err { return sys::next(); } else { return sys::deny(); }
    }
}

fn add_bcc(ctx, bcc) {
    if bcc in ctx.rcpt {
        return sys::deny();
    }

    sys::bcc(ctx, bcc);

    if bcc in ctx.rcpt { sys::next() } else { sys::deny() }
}
