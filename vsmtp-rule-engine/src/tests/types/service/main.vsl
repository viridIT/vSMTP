import "services" as services;

#{
    connect: [
        rule "test shell service" || {
            print(services::echo.to_string());
            print(services::echo.to_debug());

            let result = services::echo.run_shell();

            print(`string: ${result.to_string()}`);
            print(`debug: ${result.to_debug()}`);

            if result.has_code
            && result.code == 0
            && !result.has_signal
            {
                try {
                    result.signal;
                    return deny();
                } catch {
                    return next();
                }
            } else {
                deny()
            }
        },

        rule "trailing" || accept(),
    ]
}
