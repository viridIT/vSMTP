#{
    connect: [
        rule "unknown service" || {
            try {
                srv.run_service(ctx, "unknown");
                return deny();
            } catch (err) {
                print(err);
                if "" in err { return next(); } else { return deny(); }
            }
        },

        rule "test shell service" || {
            let result = srv.run_service(ctx, "shell");

            print(`string: ${result.to_string()}`);
            print(`debug: ${result.to_debug()}`);

            if result.has_code
            && result.code == 0
            && !result.has_signal
            {
                try {
                    result.signal;
                    return deny();
                } catch {
                    return next();
                }
            } else {
                deny()
            }
        },

        rule "trailing" || accept(),
    ]
}
