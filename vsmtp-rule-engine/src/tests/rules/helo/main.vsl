object bar fqdn = "example.com";
object domains file:fqdn = "./src/tests/rules/helo/helo.txt";
object com regex = "^[a-z0-9.]+.com$";

#{
  helo: [
    rule "test_fqdn" || {
      if ctx.helo is bar && bar is ctx.helo {
        vsl::next()
      } else {
        vsl::deny()
      }
    },

    rule "test_file" || {
      if ctx.helo in domains {
        vsl::next()
      } else {
        vsl::deny()
      }
    },

    rule "test_regex" || {
      if ctx.helo is com {
        vsl::next()
      } else {
        vsl::deny()
      }
    },
  ]
}
